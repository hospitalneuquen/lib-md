	0%, 20% {
		width: 4px;
		height: 4px;
		-moz-border-radius: 2px;
		border-radius: 2px;
		left: 0%;
		background-color: rgba(255, 255, 255, 0);
	}

	30%, 70% {
		width: 8px;
		height: 8px;
		-moz-border-radius: 4px;
		border-radius: 4px;
		left: 50%;
		background-color: rgba(255, 255, 255, 1);
	}

	80%, 100% {
		width: 4px;
		height: 4px;
		-moz-border-radius: 2px;
		border-radius: 2px;
		left: 100%;
		background-color: rgba(255, 255, 255, 0);
	}
